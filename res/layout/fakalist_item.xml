
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    
            <TextView
            android:id="@+id/fakalistitem_positionName"
            android:layout_width = "120dp"
            android:layout_height="wrap_content"
            android:text="储位名称"
            android:textSize="25sp"
            android:gravity="center"
            />
         <TextView
            android:id ="@+id/fakalistitem_name"
            android:layout_width = "120dp"
            android:layout_height="wrap_content"
            android:text="物料名称"
            android:textSize="25sp"
            android:gravity="center"
            />
          <TextView
            android:id="@+id/fakalistitem_type"
            android:layout_width = "120dp"
            android:layout_height="wrap_content"
            android:text="类型"
            android:textSize="25sp"
            android:gravity="center"
            />
          <TextView
            android:id="@+id/fakalistitem_price"
            android:layout_width = "120dp"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textSize="25sp"
            android:gravity="center"
            />
           <TextView
            android:id="@+id/fakalistitem_thecount"
            android:layout_width = "120dp"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textSize="25sp"
            android:gravity="center"
            />
    

</LinearLayout>
    
    

