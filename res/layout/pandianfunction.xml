<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
       <Button
        android:id="@+id/panDian_Link"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:text = "连接手持机"
        />
        <Button
        android:id="@+id/panDian_read"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:text = "读取"
        />
        
        	            <!-- 显示储位名称-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25sp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    />
            <TextView
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text = "储位名称"
                android:gravity="center"
                android:textSize="25sp"
                />
             <TextView
                 android:id="@+id/panDian_display_position"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text = "储位名称"
                android:gravity="center"
                android:textSize="25sp"
                />
            </LinearLayout>
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 显示物资名称-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25sp"
                android:orientation="horizontal">"
            <TextView
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text = "物资名称"
                android:gravity="center"
                android:textSize="25sp"
                />
             <TextView
                 android:id="@+id/panDian_display_matterName"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text = "物资名称"
                android:gravity="center"
                android:textSize="25sp"
                />
            </LinearLayout>
            <!-- 显示物资数量-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25sp"
                android:orientation="horizontal">
            <TextView
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text = "物资数量"
                android:gravity="center"
                android:textSize="25sp"
                />
             <TextView
                android:id="@+id/panDian_display_Number"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text = "物资数量"
                android:gravity="center"
                android:textSize="25sp"
                />
            </LinearLayout>
            
            
            
            
            <!-- 编辑实际数量区 -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25sp"
                android:orientation="horizontal">
            <TextView
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text = "盘点实际数量"
                android:gravity="center"
                android:textSize="25sp"
                />
             <EditText
                 android:id="@+id/panDian_edit_realNumber"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:hint = "物资实际数量"
                android:gravity="center"
                android:textSize="25sp"
                android:inputType="numberDecimal"
                />
            </LinearLayout>
            
            
            <Button
                android:id="@+id/panDian_write_realNumber"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="更改标签"
                android:textSize="25sp"
                android:textColor="#FF0000"
                android:gravity="center"
				android:layout_margin="150dp"
                />
            </LinearLayout>
    

</LinearLayout>
