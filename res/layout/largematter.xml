<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <Button 
        android:id="@+id/largeMatter_connect"
        android:text="连接手持机"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        />
    <!-- 三个待控制按键：读取标签按键、操作区、确认按钮 -->
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/readTag"
            android:text="读取标签"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            />
        <Spinner
            android:id="@+id/operations"
            android:prompt="@string/spinner_prompt"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/confirmOperation"
            android:text="确认"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            />
    </LinearLayout>
    <!--用于显示读取的基本信息：物资名称、型号规格、图号 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/LargeMatterName"
            android:text="物资名称"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/LargeMatterType"
            android:text="型号规格"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:gravity="center"
             android:textSize="20sp"
            />
        <TextView
            android:id="@+id/LargeMatterPiccode"
            android:text="图号"
            android:layout_height="wrap_content"
            android:layout_width="200dp" 
            android:gravity="center"
            android:textSize="20sp"
            />
    </LinearLayout>
    <!-- 静态文本：操作人、操作时间、操作类型 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="操作人"
            android:layout_height="wrap_content"
            android:layout_width="200dp" 
            android:gravity="center"
            android:textSize="20sp"
            />
            <TextView
            android:text="操作时间"
            android:layout_height="wrap_content"
            android:layout_width="200dp" 
            android:gravity="center"
            android:textSize="20sp"
            />
            <TextView
            android:text="操作类型"
            android:layout_height="wrap_content"
            android:layout_width="200dp" 
            android:gravity="center"
            android:textSize="20sp"
            />
    </LinearLayout>
    <!-- 查询数据库显示的控件 -->
    <ListView
            android:id="@+id/MatterOperationList"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        />
    
    

</LinearLayout>
